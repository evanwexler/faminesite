<div role='banner' class="header">
	{{#if @blog.logo}}
	<a class="logo" href="{{@blog.url}}">
		<img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
	{{/if}}
	<h1 class="container blogtitle">
		<a class="blogtitle" title="{{@blog.title}}" href='{{@blog.url}}'>
		{{{@blog.title}}}
		</a>
	</h1>
	
	<h2 class="container blogdescription">
		<a class="blogdescription" title="{{@blog.title}}" href='{{@blog.url}}'>
		{{@blog.description}}
		</a>
	</h2>
</div>


